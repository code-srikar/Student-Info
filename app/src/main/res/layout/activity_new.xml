<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".New">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:fontFamily="cursive"
        android:text="Enter the Details"
        android:textColor="@color/black"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/name"
        android:layout_width="350dp"
        android:layout_height="57dp"
        android:layout_margin="15dp"
        android:background="@drawable/edit_bg"
        android:hint="Enter the name"
        android:inputType="text"
        android:maxLines="1"
        android:paddingLeft="20dp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="23sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintVertical_bias="0.04000002" />

    <EditText
        android:id="@+id/rno"
        android:layout_width="350dp"
        android:layout_height="57dp"
        android:layout_margin="15dp"
        android:hint="Enter the Roll Number"
        android:paddingLeft="20dp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="23sp"
        android:inputType="text"
        android:maxLines="1"
        android:background="@drawable/edit_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name" />

    <EditText
        android:id="@+id/s1"
        android:layout_width="350dp"
        android:layout_height="57dp"
        android:layout_margin="15dp"
        android:hint="Enter Subject 1 Marks"
        android:paddingLeft="20dp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="23sp"
        android:inputType="number"
        android:maxLines="1"
        android:maxLength="3"
        android:background="@drawable/edit_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rno" />

    <EditText
        android:id="@+id/s2"
        android:layout_width="350dp"
        android:layout_height="57dp"
        android:layout_margin="15dp"
        android:hint="Enter Subject 2 Marks"
        android:paddingLeft="20dp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="23sp"
        android:inputType="number"
        android:maxLines="1"
        android:maxLength="3"
        android:background="@drawable/edit_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/s1" />

    <EditText
        android:id="@+id/s3"
        android:layout_width="350dp"
        android:layout_height="57dp"
        android:layout_margin="15dp"
        android:hint="Enter Subject 3 Marks"
        android:paddingLeft="20dp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="23sp"
        android:inputType="number"
        android:maxLines="1"
        android:maxLength="3"
        android:background="@drawable/edit_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/s2" />

    <EditText
        android:id="@+id/s4"
        android:layout_width="350dp"
        android:layout_height="57dp"
        android:layout_margin="15dp"
        android:hint="Enter Subject 4 Marks"
        android:paddingLeft="20dp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="23sp"
        android:inputType="number"
        android:maxLines="1"
        android:maxLength="3"
        android:background="@drawable/edit_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/s3" />

    <EditText
        android:id="@+id/s5"
        android:layout_width="350dp"
        android:layout_height="57dp"
        android:layout_margin="15dp"
        android:hint="Enter Subject 5 Marks"
        android:paddingLeft="20dp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="23sp"
        android:inputType="number"
        android:maxLines="1"
        android:maxLength="3"
        android:background="@drawable/edit_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/s4" />

    <Button
        android:id="@+id/enter"
        android:layout_width="170dp"
        android:layout_height="55dp"
        android:layout_margin="25dp"
        android:text="Enter"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@drawable/btn_bg"
        android:backgroundTint="#00E676"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/s5" />

</androidx.constraintlayout.widget.ConstraintLayout>